@page "/"

@if (Posts.Count() == 0 && !IsLoading)
{
    <div class="columns has-text-centered">
        <div class="column">
            <h3 class="title">Sorry, no posts available</h3>
        </div>
    </div>
}
else
{
    @foreach (PostListModel post in Posts)
    {
        <div class="columns post-item" @onclick="@(() => OpenPost(post))">
            <div class="column">
                <h3 class="is-size-4 is-bold">@post.Title</h3>
                <span>posted by anon on @post.Posted_At.ToString("MM/dd/yy") with @post.TotalComments Comments </span>
            </div>
        </div>
    }
}
